<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.github.ipcjs.screenshottile"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ui.activity.NoDisplayActivity"
            android:theme="@android:style/Theme.NoDisplay"/>
        <activity
            android:name=".ui.activity.DelayScreenshotActivity"
            android:excludeFromRecents="true"
            android:theme="@style/AppTheme.Transparent"/>
        <activity
            android:name=".ui.activity.DialogContainerActivity"
            android:excludeFromRecents="true"
            android:theme="@style/AppTheme.Transparent"/>

        <activity
            android:name=".ui.activity.ContainerActivity"
            android:taskAffinity="${applicationId}.ui"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".ui.activity.SettingActivity"
            android:launchMode="singleTask"
            android:taskAffinity="${applicationId}.ui"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE_PREFERENCES"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.SettingDialogActivity"
            android:excludeFromRecents="true"
            android:theme="@style/AppTheme.Transparent"/>

        <service
            android:name=".ScreenshotTileService"
            android:icon="@drawable/ic_stat_name"
            android:label="@string/tile_label"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE"/>
            </intent-filter>
        </service>
    </application>

</manifest>